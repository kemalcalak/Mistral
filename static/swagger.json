{
    "swagger": "2.0",
    "info": {
      "description": "This is the API documentation for the Mistral-7B-v0.3 model API.",
      "version": "1.0.0",
      "title": "Mistral-API"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "paths": {
      "/predict": {
        "post": {
          "summary": "Get prediction from the model",
          "description": "Provide an input text to get a prediction from the model.",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Input text",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful prediction",
              "schema": {
                "type": "object",
                "properties": {
                  "prediction": {
                    "type": "string"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request"
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      }
    }
  }
  